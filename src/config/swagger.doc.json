{
  "openapi": "3.0.0",
  "info": {
    "title": "Node Catalog API",
    "version": "1.0.0",
    "description": "API documentation for catalog and product management."
  },
  "servers": [
    { "url": "http://localhost:5000/api" }
  ],
  "paths": {
    "/catalogs/title": {
      "post": {
        "summary": "Create a new catalog title",
        "operationId": "createCatalogTitle",
        "responses": {
          "201": { "description": "Catalog title created" },
          "400": { "description": "Invalid input" }
        }
      },
      "get": {
        "summary": "Get all catalog titles",
        "operationId": "getCatalogTitles",
        "responses": {
          "200": { "description": "List of catalog titles" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/products": {
      "post": {
        "summary": "Create a new product",
        "operationId": "createProduct",
        "responses": {
          "201": { "description": "Product created" },
          "400": { "description": "Invalid input" }
        }
      },
      "get": {
        "summary": "Get all products",
        "operationId": "getProducts",
        "responses": {
          "200": { "description": "List of products" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/search": {
      "get": {
        "summary": "Search products",
        "operationId": "searchProducts",
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "description": "Title of the product to search for",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "location",
            "in": "query",
            "description": "Location of the product to search for",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "catalogId",
            "in": "query",
            "description": "Catalog ID to filter products",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": { "description": "Search results" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  }
}
